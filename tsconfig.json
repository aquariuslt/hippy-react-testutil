{
  "compilerOptions": {
    "module": "esnext",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "target": "es6",
    "sourceMap": false,
    "skipLibCheck": true,
    "rootDir": "./",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@localTypes/*": [
        "temp/types/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "temp/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/__tests__",
    "**/*.test.ts"
  ]
}

